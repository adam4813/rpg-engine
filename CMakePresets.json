{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 20,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, debug build type",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-debug",
			"displayName": "x64 Debug",
			"description": "Sets debug build type and x64 arch",
			"inherits": "base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},
		{
			"name": "x64-release",
			"displayName": "x64 Release",
			"description": "Sets release build type",
			"inherits": "x64-debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "x86-debug",
			"displayName": "x86 Debug",
			"description": "Sets debug build type and x86 arch",
			"inherits": "base",
			"architecture": {
				"value": "x86",
				"strategy": "external"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "x86-release",
			"displayName": "x86 Release",
			"description": "Sets release build type",
			"inherits": "x86-debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "tests",
			"displayName": "Tests",
			"description": "Enables building of tests",
			"inherits": "base",
			"cacheVariables": {
				"BUILD_TESTS": true
			}
		}
	],
	"buildPresets": [
		{
			"name": "x64-debug-build",
			"displayName": "Default",
			"configurePreset": "x64-debug",
			"description": "Vanilla build"
		},
		{
			"name": "x64-release-build",
			"displayName": "Default",
			"configurePreset": "x64-release",
			"description": "Vanilla build"
		},
		{
			"name": "x86-debug-build",
			"displayName": "Default",
			"configurePreset": "x86-debug",
			"description": "Vanilla build"
		},
		{
			"name": "x86-release-build",
			"displayName": "Default",
			"configurePreset": "x86-release",
			"description": "Vanilla build"
		},
		{
			"name": "verbose-build",
			"displayName": "Verbose Build",
			"description": "Passes -v to Ninja",
			"configurePreset": "x64-debug",
			"nativeToolOptions": ["-v"]
		},
		{
			"name": "tests",
			"displayName": "Tests",
			"configurePreset": "tests",
			"description": "Tests build"
		}
	],
	"testPresets": [
		{
			"name": "test",
			"description": "Enable output on failure",
			"configurePreset": "tests",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error"
			}
		}
	]
}
